{
    "version": "2.0.0",
    "tasks": [
      {
        "label": "Build with GCC-14",
        "type": "shell",
        "command": "${GCC_PATH}", // Thay bằng đường dẫn thực tế
        "args": [
          "-fdiagnostics-color=always",
          "-std=c++23",
          "${file}",
          "-o",
          "${fileDirname}/${fileBasenameNoExtension}"
        ],
        "group": {
          "kind": "build",
          "isDefault": true
        }
      }
    ]
  }